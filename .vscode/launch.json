{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run texteditor with no other arguments",
            "type": "debugpy",
            "request": "launch",
            "module": "texteditor",
            "console": "internalConsole",
            "justMyCode": false,
            "env": {"PYTHONPATH": "../libtextworker"},
            "args": ["--appdatadir=../tew-data"]
        },
        {
            "name": "Run texteditor to open README.md",
            "type": "debugpy",
            "request": "launch",
            "module": "texteditor",
            "console": "internalConsole",
            "args": ["README.md"],
            "justMyCode": false
        }
    ]
}